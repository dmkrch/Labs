#ifndef FigureH
#define FigureH

#pragma once

#endif



class Figure
{
	public:
		void set_area(double area)
		{
			this -> area = area;
		}

		void set_perimeter(double perimeter)
		{
			this -> perimeter = perimeter;
		}

		double get_area()
		{
			return area;
		}

		double get_perimeter()
		{
			return perimeter;
		}

	private:
		int area;
		int perimeter;
};

